---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight01.png'
import highlight01mobile from '../../../assets/highlights/highlight01.png'
import highlight02 from '../../../assets/highlights/highlight02.png'
import highlight02mobile from '../../../assets/highlights/highlight02.png'
import highlight03 from '../../../assets/highlights/highlight03.png'
import highlight03mobile from '../../../assets/highlights/highlight03.png'
import highlight04 from '../../../assets/highlights/highlight04.png'
import highlight04mobile from '../../../assets/highlights/highlight04.png'
import highlight05 from '../../../assets/highlights/highlight05.png'
import highlight05mobile from '../../../assets/highlights/highlight05.png'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: '<strong>Capture Attention</strong> Where It Matters Most',
		text: 'Show timely announcements directly in the new Shopify customer account pages—right where your customers are already engaged.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'Match Your Brand with <strong>Flexible Styles</strong>',
		text: 'Customize the look and feel of each announcement bar with multiple layout and color options—no theme edits required.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>Target Specific Pages</strong> with Precision',
		text: 'Display announcements on the order list, order detail, or profile page to deliver the right message at the right moment.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'Easy, <strong>No-Code Customization</strong>',
		text: 'Design and manage announcements effortlessly with our intuitive admin dashboard—tailor text, links, and style with zero coding.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	},
	{
		title: 'Automate Timing with <strong>Smart Scheduling</strong>',
		text: 'Set start and end dates for announcements to appear automatically—perfect for timed promotions, launches, or policy updates.',
		image: highlight05,
		mobileImage: highlight05mobile,
		imageWidth: highlight05.width,
		imageHeight: highlight05.height,
		imagePosition: 'right'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
