---
// Basic FAQ section
// ------------
// Description: A section that contains a list of frequently asked questions with answers.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import Accordion from '../../ui/Accordion.astro'
import Card from '../../ui/cards/partials/Card.astro'

// Props
type Props = {
	classes?: string
}
const { classes } = Astro.props
---

<Section id="FAQ" classes={classes}>
	<Row>
		<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
			<h2 class="text-pretty">
				Demystifying <strong>pricing,</strong> common queries resolved
			</h2>
			<p class="text-lg leading-relaxed">
				Curious about our pricing plans? We’re here to help. Below are some of the most frequently
				asked questions about our pricing options.
			</p>
		</Col>
		<Col span="2" />
		<Col span="8">
			<Card classes="divide-y divide-neutral-100 dark:divide-neutral-800">
				<Accordion
					title="What is included in the free trial?"
					text="You get full access to all features for 7 days — no limitations. Create announcements, customize styles, schedule them, and see how it performs in your live customer account pages."
				/>
				<Accordion
					title="Are there any hidden fees?"
					text="No. Elevix has a flat, transparent pricing model. What you see on the app listing is exactly what you pay — no upsells, add-ons, or surprise charges."
				/>
				<Accordion
					title="What payment methods do you accept?"
					text="All payments are handled directly through Shopify, so we accept whatever billing method you’ve set up in your Shopify admin (credit card, PayPal, etc.)."
				/>
				<Accordion
					title="Do you offer discounts for annual subscriptions?"
					text="Yes! Our annual plan gives you 2 months free compared to monthly billing — it’s $59.99/year vs $5.99/month."
				/>
			</Card>
		</Col>
		<Col span="2" />
	</Row>
</Section>

<style>
	.page-header {
		@apply mx-auto max-w-3xl;
	}
	.page-header__text {
		@apply text-lg leading-relaxed;
	}
</style>
