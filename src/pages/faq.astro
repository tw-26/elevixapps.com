---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import faqData from '../data/json-files/faqData.json'

// FAQ Categories
const faqGettingStarted = faqData.filter((faq) => faq.category === 'Getting Started')
const faqFeatures = faqData.filter((faq) => faq.category === 'Features & Customization')
const faqManagement = faqData.filter((faq) => faq.category === 'Managing Announcements')
const faqTroubleshooting = faqData.filter((faq) => faq.category === 'Troubleshooting')
const faqTechnical = faqData.filter((faq) => faq.category === 'Technical & Performance')
const faqGeneral = faqData.filter((faq) => faq.category === 'General & Support')

// - SEO
const SEO = {
	title: 'Elevix FAQs & Setup Guide â€“ Shopify Customer Announcements',
	description:
		'Learn how to use Elevix to add and schedule announcement bars in Shopify customer accounts. Setup instructions, scheduling tips, and full FAQ included.'
}
// - Page Header
const header = {
	title: '<strong>Elevix</strong> Help & FAQs',
	text: 'Learn how to use Elevix to add and schedule announcement bars in Shopify customer accounts. Setup instructions, scheduling tips, and full FAQ included.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<FAQ title="Getting Started" text="" data={faqGettingStarted} />
	<FAQ title="Features & Customization" text="" data={faqFeatures} />
	<FAQ title="Managing Announcements" text="" data={faqManagement} />
	<FAQ title="Troubleshooting" text="" data={faqTroubleshooting} />
	<FAQ title="Technical & Performance" text="" data={faqTechnical} />
	<FAQ title="General & Support" text="" data={faqGeneral} />
	<CTA />
</Layout>
