---
// Components
import Layout from '../layouts/Layout.astro'
import SidebarContent from '../components/blocks/basic/StickySidebar.astro'
import Hero from '../components/blocks/hero/PageHeader.astro'

const SEO = {
	title: 'Elevix Apps | Privacy Policy',
	description:
		"Learn how Elevix Apps handles store information, protects your privacy, and complies with Shopify's data policies."
}

const header = {
	title: 'Your Privacy Matters:<br/> <strong>Our Commitment</strong>',
	text: 'Understand how Elevix Apps collects, uses, and protects your store information.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />

	<SidebarContent>
		<div slot="sidebar">
			<h3>Overview</h3>
			<p>
				This Privacy Policy explains how Elevix Apps collects, uses, and protects store information
				when you install or use our Shopify app.
			</p>
		</div>
		<div class="basic-text">
			<h4>Information We Collect</h4>
			<p>
				When you install Elevix, we automatically access the following store information provided by
				Shopify:
			</p>
			<ul>
				<li>Store name</li>
				<li>Store domain</li>
				<li>Store email</li>
			</ul>
			<p>
				We do <strong>not</strong> collect customer data, payment information, or any personal data beyond
				what Shopify provides during app installation.
			</p>

			<h4>How We Use Your Information</h4>
			<p>We use your store data only to:</p>
			<ul>
				<li>Deliver and maintain app functionality</li>
				<li>Identify your store for support and troubleshooting</li>
				<li>Ensure proper licensing and access control</li>
			</ul>
			<p>
				We do <strong>not</strong> sell, rent, or share your data with any third parties.
			</p>
		</div>
	</SidebarContent>

	<SidebarContent classes="bg-neutral-50 dark:bg-neutral-900">
		<div slot="sidebar">
			<h3>Your Rights</h3>
			<p>
				As a merchant, you have full rights to control your store data. Learn how to access or
				request changes to your information.
			</p>
		</div>
		<div class="basic-text">
			<h4>Access and Correction</h4>
			<p>
				You may request access to the store information we hold, and you have the right to correct
				or delete it at any time.
			</p>
			<p>
				To make such a request, please email us at <a href="mailto:support@elevixapps.com"
					>support@elevixapps.com</a
				>.
			</p>

			<h4>Data Retention</h4>
			<p>
				We retain your store data only as long as necessary to provide the app's functionality or as
				required by law. When you uninstall Elevix, your store data is automatically removed.
			</p>
		</div>
	</SidebarContent>

	<SidebarContent>
		<div slot="sidebar">
			<h3>Contact Us</h3>
			<p>Have questions about your data or this Privacy Policy? We're here to help.</p>
		</div>
		<div class="basic-text">
			<h4>Contact Information</h4>
			<p>Email: <a href="mailto:support@elevixapps.com">support@elevixapps.com</a></p>
		</div>
	</SidebarContent>
</Layout>
