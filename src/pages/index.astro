---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Button from '../components/ui/Button.astro'

// - SEO
const SEO = {
	title: 'Elevix Low Stock Alert App - Daily Email Alerts for Shopify Stores',
	description:
		'Daily low-stock alerts by email to prevent stockouts and missed sales. Automatic inventory monitoring for busy store owners. Set custom stock thresholds per product or store-wide. Simple setup, powerful results.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<!-- Hero Section -->
	<Section
		id="hero"
		padding="both"
		classes="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-neutral-900 dark:to-neutral-800"
	>
		<Row>
			<Col span="1" />
			<Col span="10">
				<div class="grid items-center gap-12 lg:grid-cols-2">
					<!-- Left Content -->
					<div>
						<div
							class="mb-6 inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-200"
						>
							üìß Daily Email Alerts
						</div>
						<h1
							class="mb-6 text-5xl font-bold leading-tight text-neutral-900 dark:text-neutral-100"
						>
							Never Run Out of Stock Again
						</h1>
						<p class="mb-8 text-xl leading-relaxed text-neutral-700 dark:text-neutral-300">
							Daily low-stock alerts by email to prevent stockouts and missed sales. Automatic
							inventory monitoring for busy store owners.
						</p>
						<div class="flex flex-col gap-4 sm:flex-row">
							<Button size="lg" link="https://apps.shopify.com/low-stock-alert-app" style="primary">
								Install on Shopify
							</Button>
							<Button size="lg" link="#features" style="secondary"> Learn More </Button>
						</div>
					</div>

					<!-- Right Content - App Image -->
					<div class="relative">
						<div class="relative z-10">
							<img
								src="assets/featured.jpg"
								alt="Elevix Low Stock Alert App Dashboard"
								class="h-auto w-full rounded-2xl shadow-2xl"
							/>
						</div>
						<!-- Decorative background elements -->
						<div
							class="absolute -right-4 -top-4 h-24 w-24 rounded-full bg-blue-200 opacity-50 dark:bg-blue-800"
						>
						</div>
						<div
							class="absolute -bottom-4 -left-4 h-16 w-16 rounded-full bg-indigo-200 opacity-50 dark:bg-indigo-800"
						>
						</div>
					</div>
				</div>
			</Col>
			<Col span="1" />
		</Row>
	</Section>

	<!-- Features Section -->
	<Section id="features" padding="both" classes="bg-white dark:bg-neutral-900">
		<Row>
			<Col span="2" />
			<Col span="8" align="center">
				<h2 class="mb-4 text-3xl font-bold text-neutral-900 dark:text-neutral-100">
					Simple Setup, Powerful Results
				</h2>
				<p class="mb-12 text-lg text-neutral-600 dark:text-neutral-400">
					Built for busy merchants who need reliable inventory management without the complexity.
				</p>

				<div class="grid gap-8 md:grid-cols-3">
					<!-- Feature 1 -->
					<div class="rounded-xl bg-neutral-50 p-6 text-center dark:bg-neutral-800">
						<div
							class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30"
						>
							<span class="text-2xl">üìß</span>
						</div>
						<h3 class="mb-3 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
							Daily Email Alerts
						</h3>
						<p class="text-neutral-600 dark:text-neutral-400">
							Get clear, easy-to-read email summaries of low-stock products delivered to your inbox
							daily.
						</p>
					</div>

					<!-- Feature 2 -->
					<div class="rounded-xl bg-neutral-50 p-6 text-center dark:bg-neutral-800">
						<div
							class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-green-100 dark:bg-green-900/30"
						>
							<span class="text-2xl">‚öôÔ∏è</span>
						</div>
						<h3 class="mb-3 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
							Custom Thresholds
						</h3>
						<p class="text-neutral-600 dark:text-neutral-400">
							Set custom stock thresholds per product or for your entire store to match your
							business needs.
						</p>
					</div>

					<!-- Feature 3 -->
					<div class="rounded-xl bg-neutral-50 p-6 text-center dark:bg-neutral-800">
						<div
							class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-purple-100 dark:bg-purple-900/30"
						>
							<span class="text-2xl">üöÄ</span>
						</div>
						<h3 class="mb-3 text-xl font-semibold text-neutral-900 dark:text-neutral-100">
							Automatic Monitoring
						</h3>
						<p class="text-neutral-600 dark:text-neutral-400">
							Automatic daily low-stock alerts to restock before losing sales. No manual checks
							needed.
						</p>
					</div>
				</div>
			</Col>
			<Col span="2" />
		</Row>
	</Section>

	<!-- CTA Section -->
	<Section id="cta" padding="both" classes="bg-gradient-to-r from-blue-600 to-indigo-700">
		<Row>
			<Col span="2" />
			<Col span="8" align="center">
				<h2 class="mb-4 text-3xl font-bold text-white">Ready to Prevent Stockouts?</h2>
				<p class="mb-8 text-xl text-blue-100">
					Join thousands of merchants who never miss a sale due to stockouts.
				</p>
				<Button
					size="lg"
					link="https://apps.shopify.com/low-stock-alert-app"
					style="primary"
					classes="bg-white text-blue-600 hover:bg-blue-50"
				>
					Install on Shopify
				</Button>
			</Col>
			<Col span="2" />
		</Row>
	</Section>
</Layout>
